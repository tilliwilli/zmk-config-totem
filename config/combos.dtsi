ZMK_COMBO(f6,    &kp F6,        LH0 LM1,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(f7,    &kp F7,        LH0 LT3,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(f8,    &kp F8,        LH0 LT2,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(f9,    &kp F9,        LH0 LT1,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(f10,   &kp F10,       LH0 LB0,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(f11,   &kp F11,       LH0 LM0,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(f12,   &kp F12,       LH0 LT0,     ALL, COMBO_TERM_SLOW)

/* Thumb combos - right hand */
ZMK_COMBO(n1,    &kp 1,         RH0 RB1,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n2,    &kp 2,         RH0 RB2,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n3,    &kp 3,         RH0 RB3,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n4,    &kp 4,         RH0 RM1,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n5,    &kp 5,         RH0 RM2,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n6,    &kp 6,         RH0 RM3,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n7,    &kp 7,         RH0 RT1,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n8,    &kp 8,         RH0 RT2,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n9,    &kp 9,         RH0 RT3,     ALL, COMBO_TERM_SLOW)
ZMK_COMBO(n0,    &kp 0,         RH0 RM0,     ALL, COMBO_TERM_SLOW)

/* Thumb combos - both hands */
ZMK_COMBO(nav,   &tog NAV,      LH1 RH1,     ALL, COMBO_TERM_SLOW)
